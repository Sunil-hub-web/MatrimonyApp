<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/two_hundred_fifty"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/ten"
            android:layout_margin="@dimen/ten">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hundred_eighty"
                    android:id="@+id/relImageClick">

                    <ImageView
                        android:id="@+id/imag_uniform"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bannerimage"
                        android:scaleType="fitXY"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/five">

                </TextView>

                <TextView
                    android:id="@+id/texttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/five">

                </TextView>

                <TextView
                    android:id="@+id/textmessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/five">

                </TextView>

            </LinearLayout>




        </androidx.cardview.widget.CardView>


</RelativeLayout>