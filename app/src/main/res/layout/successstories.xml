<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/two_hundred"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/ten"
            android:layout_margin="@dimen/ten">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hundred_fifty"
                    android:id="@+id/relImageClick">

                    <ImageView
                        android:id="@+id/imag_uniform"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bannerimage"
                        android:scaleType="fitXY"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/five">

                    <TextView
                        android:id="@+id/textname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular">

                    </TextView>

                    <TextView
                        android:id="@+id/texttitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular">

                    </TextView>

                    <TextView
                        android:id="@+id/textmessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/thirteen"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:fontFamily="@font/poppins_regular">

                    </TextView>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_ViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_margin="@dimen/five"
                    app:cornerRadius="@dimen/ten"
                    android:text="View Profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/twelve_size"
                    android:textStyle="bold"
                    app:backgroundTint="@color/back_bg1">

                </com.google.android.material.button.MaterialButton>


            </LinearLayout>




        </androidx.cardview.widget.CardView>


</RelativeLayout>