<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/allfrom_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:gravity="center"
            android:text="Basic Information"
            android:textColor="@color/black"
            android:textSize="@dimen/twenty"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/edit_back"
            android:padding="@dimen/ten">

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minHeight="0dp"
                android:textSize="@dimen/textsize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_drop_down" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edit_ProfileFor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/edit_back"
            android:hint="Enter Your Skill"
            android:padding="@dimen/twelve"
            android:textColorHint="#737373" />

        <EditText
            android:id="@+id/yourHobbies"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/edit_back"
            android:gravity="top"
            android:hint="Enter Your Hobbies"
            android:padding="@dimen/fifteen" />

        <EditText
            android:id="@+id/somethingAboutyou"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_twenty"
            android:layout_margin="@dimen/ten"
            android:background="@drawable/edit_back"
            android:gravity="top"
            android:hint="Write Something About you"
            android:padding="@dimen/fifteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="10dp"
                android:layout_weight="1.3"
                android:padding="@dimen/ten"
                android:text="Save And Continue"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="@color/bs_red"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.7"
                android:padding="@dimen/ten"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="@color/bs_red" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>