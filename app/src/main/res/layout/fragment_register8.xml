<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allfrom_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:gravity="center"
                android:text="Family Details"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forgotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:text="Living With Family"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty"
                android:textStyle="normal" />

            <RadioGroup
                android:id="@+id/radioWithFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioYes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Yes"
                    android:textColor="@color/black"></RadioButton>

                <RadioButton
                    android:id="@+id/radioNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No"
                    android:textColor="@color/black"></RadioButton>

            </RadioGroup>

            <EditText
                android:id="@+id/edit_FatherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/edit_back"
                android:hint="Father Name"
                android:padding="@dimen/twelve"
                android:textColorHint="#737373" />

            <EditText
                android:id="@+id/edit_FatherOccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/edit_back"
                android:hint="Father Occupation"
                android:padding="@dimen/twelve"
                android:textColorHint="#737373" />

            <EditText
                android:id="@+id/edit_MotherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/edit_back"
                android:hint="Mother Name"
                android:padding="@dimen/twelve"
                android:textColorHint="#737373" />

            <EditText
                android:id="@+id/edit_MotherOccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/edit_back"
                android:hint="Mother Occupation"
                android:padding="@dimen/twelve"
                android:textColorHint="#737373" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/edit_back"
                android:padding="@dimen/ten">

                <Spinner
                    android:id="@+id/spinnerfamilytype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:minHeight="0dp"
                    android:textSize="@dimen/textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_drop_down" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/edit_back"
                android:padding="@dimen/ten">

                <Spinner
                    android:id="@+id/spinnerFamilyStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:minHeight="0dp"
                    android:textSize="@dimen/textsize" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow_drop_down" />

            </RelativeLayout>

            <EditText
                android:id="@+id/edit_NoofBrother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/edit_back"
                android:hint="No. of Brother"
                android:padding="@dimen/twelve"
                android:textColorHint="#737373" />

            <EditText
                android:id="@+id/edit_NoofSister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:background="@drawable/edit_back"
                android:hint="No. of Sister"
                android:padding="@dimen/twelve"
                android:textColorHint="#737373" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_Save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1.3"
                    android:padding="@dimen/ten"
                    android:text="Save And Continue"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/bs_red"></com.google.android.material.button.MaterialButton>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_Next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.7"
                    android:padding="@dimen/ten"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/bs_red" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>